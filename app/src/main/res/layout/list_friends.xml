<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/friends_IMG_picture"
            android:layout_width="62dp"
            android:layout_height="62dp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/friends_LBL_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/friends_IMG_picture"
            android:layout_marginStart="12dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friends_BTN_compete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friends_LBL_userName"
            android:layout_toStartOf="@+id/friends_BTN_remove"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:cornerRadius="20dp"
            app:strokeColor="@color/purple_500"
            android:textSize="12sp"
            android:text="@string/compete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friends_BTN_remove"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/friends_LBL_userName"
            android:visibility="gone"
            app:cornerRadius="20dp"
            app:strokeColor="@color/purple_500"
            android:textSize="12sp"
            android:text="@string/remove_friend" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friends_BTN_acceptRequest"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friends_LBL_userName"
            android:layout_toStartOf="@+id/friends_BTN_rejectRequest"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:cornerRadius="20dp"
            app:strokeColor="@color/purple_500"
            android:textSize="12sp"
            android:text="@string/accept" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friends_BTN_rejectRequest"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/friends_LBL_userName"
            android:visibility="gone"
            app:cornerRadius="20dp"
            app:strokeColor="@color/purple_500"
            android:textSize="12sp"
            android:text="@string/reject" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>